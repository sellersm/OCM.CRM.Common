			<common:FormField FieldID="BARCODEELEMENTS" Caption="Scan Results" DataType="XML">
				<common:Collection EnablePaging="true">
					<common:Fields>
						<common:FormField FieldID="RATEINCREASE" Caption="Increase ?" DataType="Boolean" />
